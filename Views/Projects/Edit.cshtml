@model KieuGiaConstruction.Models.Project

<h2>Sửa Dự Án</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Tên Dự Án:</label>
        <input type="text" asp-for="ProjectName" required />
    </div>
    <div>
        <label>Ngày Bắt Đầu:</label>
        <input type="date" asp-for="StartDate" required />
    </div>
    <div>
        <label>Ngày Kết Thúc:</label>
        <input type="date" asp-for="EndDate" required />
    </div>
    <div>
        <label>Trạng Thái:</label>
        <input type="text" asp-for="iStatus" required />
    </div>
    <button type="submit">Lưu</button>
</form>
